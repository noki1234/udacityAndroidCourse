<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextStyleLogin">
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="android:textSize">@dimen/mediumText</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/shoe_button_style</item>
        <item name="android:textColor">#FFFF</item>
        <item name="android:textSize">@dimen/mediumText</item>
    </style>

    <style name="TitleStyleDetails">
        <item name="android:fontFamily">@font/amiko</item>
        <item name="android:textSize">@dimen/bigText</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TitleStyleShoeItem">
        <item name="android:fontFamily">@font/amiko</item>
        <item name="android:textSize">@dimen/mediumText</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">#7C009688</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextStyleShoeItem">
        <item name="android:fontFamily">@font/amiko</item>
        <item name="android:textSize">@dimen/mediumText</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextStyleDetails">
        <item name="android:fontFamily">@font/amiko</item>
        <item name="android:textSize">@dimen/mediumText</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
